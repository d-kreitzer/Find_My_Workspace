<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Find My Workspace</title>
    <link rel="stylesheet" href="~/css/main.css">
    <environment include="Development">
        <link rel="stylesheet" href="~/css/dev.css">
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/main.min.css">
    </environment>
    @RenderSection("Styles", required: false)
</head>
<body>
    <nav class="navbar">
        <div class="logo-container">
            <a asp-controller="Home" asp-action="Index">
                <img src="~/img/logo.png" alt="Find My Workspace Logo" class="logo">
            </a>
        </div>
        <div class="navbar-links">
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a asp-controller="Locations">Locations</a>
            <a asp-controller="Reviews">Reviews</a>
            <a asp-controller="AboutUs">About Us</a>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <footer>
        &copy; @DateTime.Now.Year Find My Workspace
    </footer>

    <script src="~/js/site.js"></script>
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
